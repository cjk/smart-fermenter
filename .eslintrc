{
  "env": {
    "node": true
  },
  "parser"  : "babel-eslint",
  "extends" : ["airbnb"],
  "rules": {
    "object-curly-spacing": ["error", "never"],
    "space-before-function-paren": ["error", "never"],
    "comma-dangle": ["error", "only-multiline"],
    "no-underscore-dangle": "off",
    "no-cond-assign": ["error", "except-parens"]
  }
}
